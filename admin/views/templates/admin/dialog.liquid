<div class="container mx-auto px-4 bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <h3 class="text-base font-semibold leading-6 text-gray-900">{{title}}</h3>
    <div class="mt-2 max-w-xl text-sm text-gray-500">{{message}}</div>
    <div class="mt-5">
      <a class="button-link" href="{{cancelURL}}">Cancel</a>
      <a href="{{confirmURL}}" class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500">{{ label }}</a>
    </div>
  </div>
</div>