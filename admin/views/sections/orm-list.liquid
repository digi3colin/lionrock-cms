<div class="container mx-auto px-4">
  <table class="min-w-full divide-y divide-gray-300">
    <thead>
      <tr class="text-left text-sm font-semibold text-gray-900">
        <th class="px-3 py-3.5 "></th>
        <th class="px-3 py-3.5 ">ID</th>
        <th class="px-3 py-3.5 ">Name</th>
        <th class="px-3 py-3.5 ">Last Update</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
    {% for item in items %}
      <tr class="text-sm text-gray-500">
        <td class="whitespace-nowrap ps-0 pe-3 py-4"><input type="checkbox" name="chk{{item.id}}" /></td>
        <td class="whitespace-nowrap px-3 py-4"><a href="/admin/{{type.tableName}}/{{item.id}}">{{item.id}}</a></td>
        <td class="whitespace-nowrap px-3 py-4"><a href="/admin/{{type.tableName}}/{{item.id}}">{{item.name}}</a></td>
        <td class="whitespace-nowrap ps-3 pe-0 py-4">{{item.updated_at | to_time | date: "%Y-%m-%d %H:%M:%S" }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>