{% liquid
  assign slug = page_type | default: slug | default: "default"
  assign label = page_type_name | default: label | default: "Default"
%}

{% schema %}
{
  "name": "Breadcrumb",
  "settings": [],
  "presets": []
}
{% endschema %}
<div class="container mx-auto px-4 flex flex-row">
  <nav class="w-2/3 hidden sm:flex" aria-label="breadcrumb">
    <ol role="list" class="flex items-center space-x-4 text-sm font-medium">
      <li class="flex items-center"><a class="me-4 text-gray-500 hover:text-gray-700" href="/admin">Home</a> <i class="fa-sharp fa-regular fa-chevron-right"></i></li>
      <li class="flex items-center"><a class="me-4 text-gray-500 hover:text-gray-700" href="/admin/contents/list/{{ slug }}">{{ label }}</a> <i class="fa-sharp fa-regular fa-chevron-right"></i></li>
      <li class="flex items-center" aria-current="page">{{ item.name | default: item.id }}</li>
    </ol>
  </nav>
  <div class="w-1/3">
    <a class="label-icon toolset-add float-end" href="/admin/contents/create/{{ slug }}">New {{ slug }}</a>
  </div>
</div>